<!--pages/wallet/wallet.wxml-->
<!-- 可以使用滑动vant weapp中的 
    Cell 单元格 
    SwipeCell Card 
    商品卡片 -->
<van-tabs active="{{ activeTab }}" bind:change="onChange">
    <van-tab title="可使用优惠券">
        <van-swipe-cell 
        right-width="{{ 65 }}" 
        left-width="{{ 0 }}" 
        wx:for="{{cardList}}" >
            <view slot="left">选择</view>
            <van-cell-group>
                <van-card 
                desc="{{item.description}}" 
                num="1" 
                price="{{item.originalPrice - item.presentPrice}}" 
                title="{{item.title}}" 
                thumb="{{ item.pictureUrl }}" >
                    <view slot="footer">
                        <van-button size="mini" bind:click="onGetQRCode" data-coupon_id="{{item.id}}" data-wallet_id="{{walletID}}">二维码</van-button>
                    </view>
                </van-card>
            </van-cell-group>

            <view slot="right" class="right">
                <van-button type="danger" bind:click="onDelete" data-id="{{item.id}}" 
                data-index = "{{index}}">
                    删除
                </van-button>
            </view>
        </van-swipe-cell>
        <van-empty wx:if="{{cardList.length == 0}}"description="暂无可用优惠券，快去首页领取吧"/>
    </van-tab>
    <van-tab title="使用记录">
        <van-swipe-cell right-width="{{ 0 }}" left-width="{{ 0 }}" wx:for="{{usedCouponList}}" >
            <view slot="left">选择</view>
            <van-cell-group>
                <van-card desc="{{item.description}}" num="1" price="{{item.originalPrice - item.presentPrice}}" title="{{item.title}}" thumb="{{ item.pictureUrl }}" >
                    <view slot="footer">
                       <text>使用日期:{{ item.ts }}</text>
                    </view>
                </van-card>
            </van-cell-group>
        </van-swipe-cell>
        <van-empty wx:if="{{usedCouponList.length == 0}}"description="暂无使用记录" />
    </van-tab>
</van-tabs>