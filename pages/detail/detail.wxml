<!--pages/detail/detail.wxml-->
<view>
    <!--TODO 详情页的结构如何处理？-->
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
        <block wx:for="{{images}}">
            <swiper-item>
                <image src="{{item}}" data-src="{{item}}"></image>
            </swiper-item>
        </block>
    </swiper>
    <!-- 参考https://www.jianshu.com/p/9feb4a128ba4 -->
    <scroll-view scroll-y="true">
        <view class="detail">
            <text class="title">LANCOME兰蔻小黑瓶精华肌底液</text>
            <view class="price">
                <text class="present-price">减免后：￥500</text>
                <text class="origin-price">原价：￥500</text>
            </view>

            <view>
                <text class="used-amount">已使用：500</text>
                <text class="left-amount">剩余：500</text>
            </view>

        </view>
        <view class="separate"></view>
    </scroll-view>
    <!-- 主要是网上有没有现成的，直接拿过来用，就不用自己全部手写了 -->
    <van-goods-action>
        <van-goods-action-icon icon="home-o" text="主页" bind:click="onClickIcon" />
        <van-goods-action-icon icon="coupon-o" text="卡包" bind:click="onClickIcon" />
        <van-goods-action-button text="立即领取" bind:click="onClickButton" />
    </van-goods-action>
</view>