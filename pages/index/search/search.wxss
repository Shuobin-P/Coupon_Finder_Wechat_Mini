.search-container {
    padding: 20rpx;
  }
  
  .search-bar {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .search-input {
    width: 80%;
    height: 60rpx;
    font-size: 28rpx;
    padding-left: 20rpx;
    border: none;
    border-radius: 30rpx;
    background-color: #F5F5F5;
  }
  
  .search-btn {
    width: 20%;
    height: 60rpx;
    font-size: 28rpx;
    color: #fff;
    background-color: #007AFF;
    border: none;
    border-radius: 30rpx;
    margin-left: 20rpx;
  }
  
  .search-history {
    margin-bottom: 40rpx;
  }
  
  .history-title {
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
  }
  
  .history-list {
    display: flex;
    flex-wrap: wrap;
  }
  
  .history-item {
    font-size: 26rpx;
    color: #666;
    background-color: #F5F5F5;
    border-radius: 30rpx;
    padding: 10rpx 20rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
  }
  
  .clear-btn {
    font-size: 26rpx;
    color: #666;
    border: none;
    background-color: transparent;
    margin-top: 20rpx;
  }
  
  .hot-title {
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
  }
  
  .hot-list {
    display: flex;
    flex-wrap: wrap;
  }
  
  .hot-item {
    font-size: 26rpx;
    color: #666;
    background-color: #F5F5F5;
    border-radius: 30rpx;
    padding: 10rpx 20rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
  }
  